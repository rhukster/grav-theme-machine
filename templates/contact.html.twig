{% extends 'default.html.twig' %}

{% block body_content %}
  <div class="content">
    <div class="contact">
      <div class="container">
        <div class="contact-top">
          <h3>{{ page.title }}</h3>
          {{ page.content }}
        </div>

        <div class="map-content">
          <div class="col-md-6 map">
            {% if config.plugins.gmaps.enabled %}
              <h4>OUR LOCATION</h4>
              {{ gmaps({ 'address': theme_config.location | join(' '), 'width': 540, 'height': 464 }) }}
            {% endif %}
          </div>

          <div class="col-md-6 contact-grid">
            {% if config.plugins.simple_form.enabled %}
              <h4>CONTACT FORM</h4>
              {{ simple_form() }}
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
